<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="smartgurlz.com.smartgurlz.menufragments.FragmentTwo">


    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/username_txt"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Email:"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/userName_etx"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="160dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Type your email adress"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />




      <!--  <android.support.design.widget.TextInputEditText -->
    <EditText
            android:id="@+id/passWord_etx"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="160dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="Type your password"
            android:inputType="textPassword"
            android:textSize="14sp" />



    <TextView
        android:id="@+id/password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        android:text="Password:"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:backgroundTint="@color/colorPurplesmart"
        android:text="Log in"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="110dp"
        android:text="Sign up"
        android:textColor="@color/colorPurplesmart" />

    <ImageView
        android:id="@+id/smartgurlz_logoet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:contentDescription="SmartgurlzLogo"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="110dp"
        android:clickable="true"
        android:text="Forgot password?"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />


</FrameLayout>

