<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    tools:context="smartgurlz.com.smartgurlz.LoginActivity">


    <TextView
        android:id="@+id/username_tx"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:text="Username:"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="141dp" />

    <EditText
        android:id="@+id/username_etx"
        android:layout_width="210sp"
        android:layout_height="50sp"
        android:ems="10"
        android:hint="Type your username"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="141dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/password_etx"
        android:layout_width="210sp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Type your password"
        android:inputType="textPassword"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="191dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/password_tx"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:text="Password:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="191dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_purple"
        android:text="Log in"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="417dp"
        tools:layout_editor_absoluteY="241dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/signup_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_purple"
        android:text="Sign up"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="241dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_purple"
        app:srcCompat="@android:drawable/ic_media_previous"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="316dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/smartgurlz_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="70sp"
        tools:layout_editor_absoluteY="42sp"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>
